{
  "name": "gru_features",
  "data_info": {
    "window_size": 17280,
    "downsampling_factor": 6,
    "latitude": 40.730610,
    "longitude": -73.935242
  },
  "preprocessing": [
    {
      "kind": "mem_reduce",
      "id_encoding_path": "series_id_encoding.json"
    },
    {
      "kind": "similarity_nan",
      "as_feature": true
    },
    {
      "kind": "add_state_labels",
      "id_encoding_path": "series_id_encoding.json",
      "events_path": "data/raw/train_events.csv",
      "use_similarity_nan": true,
      "fill_limit": 8640,
      "nan_tolerance_window": 5
    },
    {
      "kind": "add_event_labels",
      "id_encoding_path": "series_id_encoding.json",
      "events_path": "data/raw/train_events.csv",
      "smoothing": 5,
      "steepness": 2
    },
    {
      "kind": "split_windows"
    }
  ],
  "feature_engineering": [
    {
      "kind": "sun",
      "sun_features": [
        "azimuth",
        "altitude"
      ]
    },
    {
      "kind": "time",
      "time_features": [
        "weekday",
        "hour",
        "minute"
      ]
    },
    {
      "kind": "parser",
      "feats": [
        "anglez_diff_abs",
        "anglez_diff_abs_clip_10_savgol_180",
        "anglez_diff_abs_clip_10_savgol_180_diff",
        "anglez_diff_abs_clip_10_median_180",
        "anglez_diff_abs_clip_10_skew_1000"
      ]
    }
  ],
  "pretraining": {
    "downsample": {
      "features": [
        "f_anglez_diff_abs",
        "f_enmo"
      ],
      "methods": [
        "min",
        "max",
        "mean",
        "std",
        "median",
        "range",
        "var"
      ],
      "standard": "mean"
    },
    "test_size": 0.01,
    "scaler": {
      "kind": "standard-scaler",
      "copy": true
    }
  },
  "architecture": {
    "type": "event-res-gru",
    "loss": "shrinkage-loss",
    "epochs": 10,
    "batch_size": 64,
    "optimizer": "adamw-torch",
    "early_stopping": 25,
    "activation_delay": 15,
    "lr": 0.01,
    "network_params": {
      "hidden_size": 8,
      "n_layers": 5,
      "activation": "gelu"
    },
    "lr_schedule": {
      "t_initial": 25,
      "warmup_t": 5,
      "warmup_lr_init": 0.000001,
      "lr_min": 0.00001,
      "cycle_limit": 3,
      "cycle_decay": 0.5
    },
    "threshold": 0
  }
}